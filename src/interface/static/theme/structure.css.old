

html, body{
    height: 100%;
    background-color: var(--primary-color);
}

article{
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    min-height: 91%;
    margin-bottom: calc(8dvh + 15px);
}
h1,h2, h3, h4, h5, h6{
    margin: 5px;
}

h1,h2,h3,h4,h5,h6,p,pre,td,th,label {
    color: var(--text-color)
}


header > h2, header > h3 {
    margin: 8px;
}

.grid2x2 {
    width: 100%;
    min-height: 80dvh;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
}

.revrow{
    flex-direction: row-reverse;
}

.grid{
    min-height: 91%;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
}


.grid > .box, .grid > .single_box {
    display: flex; 
    flex-basis: calc(100% - 10px);  
    /* justify-content: center; */
    flex-direction: column;
}

.grid2x2 > .box, .grid2x2 > form {
    display: flex; 
    flex-basis: calc(50% - 10px);  
    /* justify-content: center; */
    flex-direction: column;
}
.grid2x2 > div > div {
    display: flex;
    /* justify-content: center; */
    flex-direction: row;
}

.box { margin: 5px; }

.padleft30{
    padding-left: 30px;
}
  
header{
    width: 100%;
    padding: 2px;
}

.box > table{
    margin: 5px;
}


th{
    padding: 1px;
}

th,tr,td,table{
    border-collapse: collapse;
    border:1px solid var(--text-color)
}


.centText{
    text-align: center;
}

tr > td {
    padding-left: 4px;
}

.actions{
    text-align: center;
    padding:unset;
}

.noHorrizStretch{
    align-content: flex-start;
}

.noVertStretch{
    align-items: flex-start;
}
  

.backAccent{
    background-color: var(--accent-color);
}


.border{
    border:1px solid var(--primary-color);
}
/* * {
    outline: 1px solid var(--text-color);
} */



body{
    overflow-x: hidden;
}

