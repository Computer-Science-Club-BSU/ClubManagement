<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
  <script src="https://code.jquery.com/ui/1.14.0/jquery-ui.js"></script>
    <title>Quick Links</title>
    <script>


        perms = []
        {% for perm in db_perms %}
            perms.push("{{ perm.name_short }}")
        {% endfor %}
        let i = 0;

    </script>
    </head>
    <body>
        {% include "navbar.liquid" %}

        <article>
            <div class="grid">
                <div class="box">
                <h1>Quick Links</h1>
                    <table id="links">
                        <tr>
                            <th>Seq</th>
                            <th>Link Title</th>
                            <th>Link Target</th>
                            <th>Permission</th>
                            <th>Ranking</th>
                            <th>Added By</th>
                            <th>Updated By</th>
                            <th>Edit</th>
                        </tr>
                        {% for link in links %}
                            <tr id="row{{ link.seq }}">

                                <td>{{ link.seq }}</td>
                                <td>{{ link.link_text }}</td>
                                <td>{{ link.link_loc }}</td>
                                <td>{{ link.name_short }}</td>
                                <td>{{ link.ranking }}</td>
                                <td>{{ link.added_by }}</td>
                                <td>{{ link.updated_by }}</td>
                                <td><button class="editLink" row="{{ link.seq }}" title="Edit Record"><i class="fa-solid fa-pen-to-square"></i></button>
                                <button class="delLink" row="{{ link.seq }}" title="Delete Record"><i class="fa-solid fa-trash-can"></i></button></td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <button id="new-link">Create</button>
                        </tr>
                    </table>
                </div>
            </div>

        </article>
        {% include "footer.liquid" %}
    {% include "modals/link_new.liquid" %}
    {% include "modals/quick_link_edit.liquid" %}
    {% include "modals/quick_link_delete.liquid" %}
    </body>
</html>