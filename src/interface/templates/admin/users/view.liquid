<!DOCTYPE html>
<html>
    <head>
    <script>
        function editUser(seq){
            let new_window = window.open(`/admin/users/edit/${seq}`, 'Edit User', 'height=600;width=800;')

        }
    </script>
    </head>
    <body>
    {% include "navbar.liquid" %}
    <table style="width: 100%">
        <tr>
            <th>Seq</th>
            <th>Title</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Username</th>
            <th>Theme</th>
            <th>Is Active</th>
            <th>Added By</th>
            <th>Added Dt</th>
            <th>Updated By</th>
            <th>Update Dt</th>
            <th>Edit</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.seq }}</td>
                <td>{{ user.title }}</td>
                <td>{{ user.first_name }}</td>
                <td>{{ user.last_name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.user_name }}</td>
                <td>{{ user.theme_desc }}</td>
                <td><input type="checkbox" {% if user.is_active == 1 %}
                        checked
                    {% endif %} disabled></td>
                <td>{{ user.added_by }}</td>
                <td>{{ user.added_dt }}</td>
                <td>{{ user.updated_by }}</td>
                <td>{{ user.update_dt }}</td>
                <td><button onclick="editUser({{ user.seq }})"><i class="fa-solid fa-pen-to-square"></i></button></td>
            </tr>
        {% endfor %}
    </table>
    {% include "footer.liquid" %}
    </body>
</html>